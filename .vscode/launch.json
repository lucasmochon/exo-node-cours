{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Dev: Run with ts-node",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "ts-node",
                "src/server.ts"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start built app (dist)",
            "program": "${workspaceFolder}/dist/index.js",
            "env": {
                "NODE_ENV": "production"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}